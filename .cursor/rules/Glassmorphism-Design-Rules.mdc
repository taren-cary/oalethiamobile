## Example Component Implementation Expectations

### Example: GlassCard
```typescript
import { BlurView } from 'expo-blur';
import { LinearGradient } from 'expo-linear-gradient';
import * as Haptics from 'expo-haptics';
import Animated, { useAnimatedStyle, withTiming } from 'react-native-reanimated';

interface GlassCardProps {
  children: React.ReactNode;
  blur?: 'light' | 'medium' | 'strong';
  pressable?: boolean;
  onPress?: () => void;
  style?: ViewStyle;
}

const GlassCard: React.FC<GlassCardProps> = ({
  children,
  blur = 'medium',
  pressable = false,
  onPress,
  style,
}) => {
  const [pressed, setPressed] = useState(false);
  
  const animatedStyle = useAnimatedStyle(() => ({
    transform: [{ 
      scale: withTiming(pressed ? 0.95 : 1, { duration: 150 }) 
    }],
  }));
  
  const handlePressIn = () => {
    setPressed(true);
    if (pressable) {
      Haptics.impactAsync(Haptics.ImpactFeedbackStyle.Light);
    }
  };
  
  const blurIntensity = {
    light: 10,
    medium: 20,
    strong: 30,
  }[blur];
  
  const Component = pressable ? Pressable : View;
  
  return (
    <LinearGradient
      colors={['rgba(99, 102, 241, 0.5)', 'rgba(139, 92, 246, 0.5)']}
      start={{ x: 0, y: 0 }}
      end={{ x: 1, y: 1 }}
      style={[{ padding: 1, borderRadius: 20 }, style]}
    >
      <Animated.View style={animatedStyle}>
        <Component
          onPressIn={handlePressIn}
          onPressOut={() => setPressed(false)}
          onPress={onPress}
        >
          <BlurView intensity={blurIntensity} tint="light" style={styles.blur}>
            <View style={styles.content}>
              {children}
            </View>
